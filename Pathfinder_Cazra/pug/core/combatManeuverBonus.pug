
.cmb
  .blackBox(style='width: 1in;'): .rollButton
    .shortname CMB
    .longname Combat Maneuver Bonus
    +rollButton('cmb')
  +labelledUnderlined('Total'): +readOnlyBox('cmb')
  .mathOperator =
  +labelledUnderlined('BAB'): +readOnlyBox('bab')
  .mathOperator +
  +labelledUnderlined('Str mod'): +readOnlyBox('str_mod')
  .mathOperator +
  +labelledUnderlined('Size'): +readOnlyBox('cmb_size')
  .mathOperator +
  +fieldBox('number', 'cmb_misc', 'Misc')
  .mathOperator +
  +fieldBox('number', 'cmb_temp', 'Temp')
  +labelledUnderlined('Conditional Modifiers')(style='margin-left: 1em; width: 2.6in;'): +input('text', 'cmb_notes')

.cmd
  .blackBox(style='width: 1in;')
    .shortname CMD
    .longname Combat Maneuver Defense
  +labelledUnderlined('Total'): +readOnlyBox('cmd')
  .mathOperator = 10 +
  +labelledUnderlined('BAB'): +readOnlyBox('bab')
  .mathOperator +
  +labelledUnderlined('Str mod'): +readOnlyBox('str_mod')
  .mathOperator +
  +labelledUnderlined('Dex mod'): +readOnlyBox('dex_mod')
  .mathOperator +
  +labelledUnderlined('Size'): +readOnlyBox('cmd_size')
  .mathOperator +
  +fieldBox('number', 'cmd_misc', 'Misc')
  .mathOperator +
  +fieldBox('number', 'cmd_temp', 'Temp')
  +labelledUnderlined('Conditional Modifiers')(style='margin-left: 1em;'): +input('text', 'cmd_notes')
